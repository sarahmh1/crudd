<!Doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-secale=1.0">
        <title>Node js Mongo db App</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
       
    </head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Node js</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="#">Mongo db express ejs app
              <span class="visually-hidden">(current)</span>
            </a>
          </li>
         
          
        </ul>
      
      </div>
    </div>
  </nav>
  <div class="card">
      <div class="card-header">
          <div class="row">
              <div class="col-8">
                  <h4 class="font-weight-bold">All customers</h4>
              </div>
              <div class="col-4">
                  <a href="/addCustomer" class="btn btn-success float-right"><i class="fa fa-plus mr-1"></i>Add new</a>
              </div>
          </div>
      </div>
      <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">CNIC</th>
                    <th scope="col">Address</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                
                <% if (customers.length > 0) { %>
                    <% for (let customer of customers) { %>
                        <tr>
                            <th scope="row"><%= customer.firstname %> <%= customer.lastname %></th>
                            
                            <td><%= customer.phonenumber %></td>
                            <td><%= customer.cnic %></td>
                            <td><%= customer.address %></td>
                            <td>
                                <a href='/updateCustomer/<%= customer._id %>' class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                                <a href='/deleteCustomer/<%= customer._id %>' class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        <% } %>
                        <% } else { %>
                            <tr>
                                <td>No data found</td>
                            </tr>
                            <% } %>
                            
            </tbody>
            </table>
  </div>
  </div>
 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
  </html>